<div class="weui-panel">
  <div class="weui-panel__hd">
    <span><%= @source.name %></span>
  </div>
  <div class="weui-panel__bd">
    <div class="is-flex is-flex-direction-column">
      <div class="has-text-centered has-text-grey"><%= @primary_material.width %>px</div>
      <div class="is-flex pl-5 pb-5">
        <% if @primary_material %>
          <%= image_tag @primary_material.url_with_watermark(@contact&.file), class: 'image' %>
        <% else %>
          <%= image_tag @contact.qr_code, class: 'image' %>
        <% end %>
        <div class="has-text-centered has-text-grey" style="writing-mode: tb-rl"><%= @primary_material.height %>px</div>
      </div>
    </div>
  </div>
  <div class="weui-panel__ft">
    <%# render partial: 'order', locals: { source: @source } %>
  </div>
</div>

<div class="weui-panel">
  <div class="weui-panel__bd">
    <div class="weui-media-box weui-media-box_small-appmsg">
      <div class="weui-cells">
        <%= render 'about_item' %>
      </div>
    </div>
  </div>
</div>
