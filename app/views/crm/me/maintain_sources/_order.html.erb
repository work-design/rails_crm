<%= form_with theme: nil, url: { controller: 'trade/my/orders', action: 'add' }, data: { controller: 'common' }, class: 'weui-cell weui-cell_access' do |f| %>
  <%= f.hidden_field :good_type, value: source.class_name %>
  <%= f.hidden_field :good_id, value: source.id %>
  <%= f.hidden_field :member_id, value: current_member&.id %>
  <%= f.hidden_field :contact_id, value: @contact&.id %>
  <%= button_tag data: { action: 'turbo:submit-start@window->common#submit' }, class: 'weui-cell__bd button is-borderless p-0 is-justify-content-flex-start' do %>
    <div>购买物料</div>
    <span><%= source.price.to_money.format(html_wrap: true).html_safe %></span>
  <% end %>
  <div class="weui-cell__ft"></div>
<% end %>
