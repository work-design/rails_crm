<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'notes', maintain_id: model.id }, aria: { label: t('.notes.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-clock has-text-primary"></i>
      <% end %>
      <%= button_to({ action: 'show', id: model.id }, data: { turbo_scroll: true }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info has-text-info"></i>
      <% end %>
      <%= button_to({ action: 'edit', id: model.id }, data: { turbo_scroll: true }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil has-text-link"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
        <i class="fa-solid fa-trash has-text-danger"></i>
      <% end %>
    </div>
    <div data-show-target="item" class="mt-2 visibility-hidden">
      <%= link_to({ controller: 'orders', maintain_id: model.id }, aria: { label: t('.orders.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-shopping-cart has-text-primary"></i>
      <% end %>
      <%= link_to({ controller: 'addresses', maintain_id: model.id }, aria: { label: t('.addresses.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-location-dot"></i>
      <% end %>
      <%= link_to({ controller: 'wallets', maintain_id: model.id }, aria: { label: t('.wallets.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-wallet"></i>
      <% end %>
      <%= link_to({ controller: 'cards', maintain_id: model.id }, aria: { label: t('.cards.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-credit-card"></i>
      <% end %>
      <%= link_to({ controller: 'productions', maintain_id: model.id }, aria: { label: t('.productions.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-store"></i>
      <% end %>
    </div>
  </td>
</tr>
