<%= form_with theme: nil, url: { controller: 'trade/me/items', action: 'create' }, data: { controller: 'common' }, class: 'media' do |f| %>
  <%= f.hidden_field :good_type, value: source.base_class_name %>
  <%= f.hidden_field :good_id, value: source.id %>
  <%= f.hidden_field :member_id, value: current_member&.id %>
  <%= f.hidden_field :contact_id, value: @contact&.id %>
  <%= button_tag data: { action: 'turbo:submit-start@window->common#submit' }, class: 'media-content button is-borderless p-0 justify-content-flex-start' do %>
    <div>购买物料</div>
    <span class="color-danger"><%= source.price.to_money.format.html_safe %></span>
  <% end %>
  <div class="media-right">
    <i class="fa-solid fa-chevron-right"></i>
  </div>
<% end %>
