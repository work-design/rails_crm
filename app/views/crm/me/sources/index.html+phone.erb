<%= render 'top_bar' %>

<div class="box is-padding-less mx-3 mt-3">
<% @sources.each do |source| %>
  <% if source.leaf? %>
    <%= link_to({ action: 'source', source_id: source.id }, state: 'enter', class: 'media') do %>
      <div class="media-content"><%= source.name %></div>
      <div class="weui-cell__ft">
        <i class="fa-solid fa-chevron-right"></i>
      </div>
    <% end %>
  <% else %>
    <%= link_to({ action: 'list', source_id: source.id }, state: 'enter', class: 'media') do %>
      <div class="weui-cell__bd"><%= source.name %></div>
      <div class="weui-cell__ft">
        <i class="fa-solid fa-chevron-right"></i>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>
