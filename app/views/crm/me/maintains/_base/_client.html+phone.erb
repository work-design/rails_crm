<% if @client.real_name.present? %>
  <div class="weui-form-preview__item">
    <label class="weui-form-preview__label"><%= Profiled::Profile.human_attribute_name(:real_name) %></label>
    <span class="weui-form-preview__value"><%= @client.real_name %></span>
  </div>
<% end %>
<% if @maintain.remark.present? %>
  <div class="weui-form-preview__item">
    <label class="weui-form-preview__label"><%= Crm::Maintain.human_attribute_name(:remark) %></label>
    <span class="weui-form-preview__value"><%= @maintain.remark %></span>
  </div>
<% else %>
  <div class="weui-form-preview__item">
    <label class="weui-form-preview__label"><%= Profiled::Profile.human_attribute_name(:nick_name) %></label>
    <span class="weui-form-preview__value"><%= @client.nick_name %></span>
  </div>
<% end %>
<div class="weui-form-preview__item">
  <label class="weui-form-preview__label"><%= Profiled::Profile.human_attribute_name(:gender) %></label>
  <span class="weui-form-preview__value"><%= @client.gender_i18n %></span>
</div>
<% if @client.birthday.present? %>
  <div class="weui-form-preview__item">
    <label class="weui-form-preview__label"><%= Profiled::Profile.human_attribute_name(:birthday) %></label>
    <span class="weui-form-preview__value">
      <span class="tag"><%= @client.birthday_type_i18n %></span>
      <span><%= @client.birthday %></span>
    </span>
  </div>
  <div class="weui-form-preview__item">
    <label class="weui-form-preview__label"><%= Profiled::Profile.human_attribute_name(:age) %></label>
    <span class="weui-form-preview__value"><%= @client.age %></span>
  </div>
<% end %>
<div class="weui-form-preview__item">
  <label class="weui-form-preview__label"><%= Profiled::Profile.human_attribute_name(:identity) %></label>
  <span class="weui-form-preview__value"><%= @client.identity %></span>
</div>
