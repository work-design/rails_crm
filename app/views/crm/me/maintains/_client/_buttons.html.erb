<div class="buttons are-large is-centered">
<% if @maintain %>
  <%= link_to({ controller: 'wallets', maintain_id: @maintain.id }, class: 'button is-success') do %>
    <i class="fa-solid fa-wallet"></i>
    <span class="pl-1"><%= t('crm.admin.wallets.index.title') %></span>
  <% end %>
  <%= button_to({ action: 'actions', id: @maintain.id }, class: 'button is-info') do %>
    <i class="fa-solid fa-lg fa-ellipsis-h"></i>
    <span>更多</span>
  <% end %>
<% else %>
  <%= button_to({ action: 'create_client' }, class: 'button is-warning') do %>
    <span>加入客户列表</span>
  <% end %>
<% end %>
</div>
