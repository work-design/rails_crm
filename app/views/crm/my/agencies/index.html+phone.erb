<div class="weui-panel">
  <div class="weui-panel__hd">我的档案</div>
  <div class="weui-panel__bd">
    <% @agencies.each do |agency| %>
    <div class="weui-media-box weui-media-box_appmsg">
      <div class="weui-media-box__hd">
        <%= image_tag agency.client.avatar, class: 'weui-media-box__thumb' if agency.client.avatar.attached? %>
      </div>
      <div class="weui-media-box__bd">
        <h4 class="weui-media-box__title"><%= agency.relation_i18n %></h4>
        <p class="weui-media-box__desc">
          <%= agency.name %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
  <div class="weui-panel__ft">
    <%= link_to({ action: 'new' }, class: 'weui-btn_cell weui-btn_cell-primary') do %>
      <i class="fa-light fa-plus"></i>
      <span>添加档案</span>
    <% end %>
  </div>
</div>
