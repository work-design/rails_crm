        <%= link_to t('.edit'), edit_my_pupil_path(@pupil), class: 'ui mini blue right floated button', remote: true %>
      </th>
      <th class="ten wide"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="has-text-right"><%= Pupil.human_attribute_name(:name) %></td>
