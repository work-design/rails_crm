<td>
  <p><%= link_to model.name, { action: 'show', id: model.id } %></p>
</td>
<td>
<% if model.client_organ_id %>
  <span class="tag is-success">Linked</span>
<% else %>
  <%= button_to({ action: 'edit_organ', id: model.id }, class: 'button is-small is-link mb-1') do %>
    <i class="fa-solid fa-plus"></i>
    <span class="pl-1"><%= t('.edit_organ.title') %></span>
  <% end %>
<% end %>
</td>
<% if defined? RailsFactory %>
  <td>
    <%= form_with theme: nil, model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
      <%= f.check_box :vendor, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
      <label data-action="click->input#check"></label>
    <% end %>
  </td>
<% end %>
