<div class="ui top attached segment">
  <%= form_with theme: 'search', model: MaintainSource.new(params.permit(:name)) do |f| %>
    <div class="fields">
      <%= f.text_field :name %>
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:name]), class: 'ui white button' %>
    </div>
  <% end %>
</div>
