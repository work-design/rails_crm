<% if url_for(action: 'index', only_path: false) == request.referer %>
  <%= turbo_stream.append 'tbody', partial: 'index_tbody', layout: 'index_tr', locals: { model: @maintain_source } %>
  <%= turbo_stream.remove 'modal' %>
<% elsif url_for(controller: 'maintains', action: 'index', only_path: false) == request.referer %>
  <%= turbo_stream.before 'source_add', partial: 'source', locals: { model: @maintain_source } %>
  <%= turbo_stream.remove 'modal' %>
<% else %>
  <%= turbo_stream.append 'body', partial: 'visit', locals: { url: url_for(action: 'index') } %>
<% end %>
