<% content_for :breadcrumb do %>
  <div class="ui basic segment breadcrumb">
    <%= link_to t('crm.admin.maintains.index.title'), admin_maintains_path, class: 'section' %>
    <i class="fas fa-angle-right divider"></i>
    <div class="active section"><%= t('crm.admin.maintain_tags.index.title') %></div>
  </div>
<% end %>

<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= MaintainTag.human_attribute_name(:name) %></th>
      <th><%= MaintainTag.human_attribute_name(:logged_type) %></th>
      <th><%= MaintainTag.human_attribute_name(:sequence) %></th>
      <th><%= MaintainTag.human_attribute_name(:color) %></th>
      <th><%= MaintainTag.human_attribute_name(:maintain_logs_count) %></th>
      <th>
        <%= link_to new_admin_maintain_tag_path, class: 'button is-link is-small', remote: true do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @maintain_tag_templates.each do |maintain_tag_template| %>
    <% maintain_tag = @selected_maintain_tags.find { |i| i.maintain_tag_template_id == maintain_tag_template.id } %>
    <tr>
      <td><%= maintain_tag_template.name %></td>
      <td><%= maintain_tag_template.logged_type_i18n %></td>
      <td><%= maintain_tag.sequence if maintain_tag %></td>
      <td>
        <span class="ui label" style="background-color: <%= maintain_tag.color %>;"><%= maintain_tag_template.color %></span>
      </td>
      <td><%= maintain_tag.maintain_logs_count if maintain_tag %></td>
      <td>
        <div class="ui toggle checkbox">
          <% if maintain_tag %>
            <%= check_box_tag '', nil, true, data: { method: :delete, remote: true, url: admin_maintain_tag_path(maintain_tag), submit: true }, id: nil %>
          <% end %>
          <% unless maintain_tag %>
            <%= check_box_tag '[maintain_tag]maintain_tag_template_id', maintain_tag_template.id, false, data: { method: :post, remote: true, url: admin_maintain_tags_path, submit: true }, id: nil %>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  <% @maintain_tags.each do |maintain_tag| %>
    <tr>
      <td><%= maintain_tag.name %></td>
      <td><%= maintain_tag.logged_type_i18n %></td>
      <td><%= maintain_tag.sequence %></td>
      <td>
        <span class="ui label" style="background-color: <%= maintain_tag.color %>;"><%= maintain_tag.color %></span>
      </td>
      <td><%= maintain_tag.maintain_logs_count %></td>
      <td>
        <%= link_to admin_maintain_tag_path(maintain_tag), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light', remote: true do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_maintain_tag_path(maintain_tag), aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light', remote: true do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_maintain_tag_path(maintain_tag), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @maintain_tags %>
