<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= button_to({ action: 'assume', id: model.id }, method: :patch, aria: { label: t('.assume') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-vote-yea"></i>
      <% end %>
      <%= link_to({ action: 'edit_assign', id: model.id }, aria: { label: t('.assign') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-hand-holding-usd"></i>
      <% end %>
      <%= link_to({ controller: 'maintain_logs', maintain_id: model.id }, aria: { label: t('.log') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-clock"></i>
      <% end %>
      <%= link_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil"></i>
      <% end %>
      <%= link_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
  </div>
</td>
