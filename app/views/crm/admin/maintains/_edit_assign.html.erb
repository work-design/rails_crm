<div class="ui modal" id="modal">
  <i class="fas fa-times close"></i>
  <div class="ui header">
    <%= t('.edit') %>
  </div>

  <div class="content">
    <%= form_with scope: :maintain, url: assign_admin_maintain_path(@maintain), method: :patch do |f| %>
      <% unless @maintain.pipeline_id %>
      <div class="inline fields">
        <%= f.collection_select :pipeline_id, @pipelines, :id, :name, include_blank: true, on: { wrap_all: false } %>
        <%= link_to new_admin_pipeline_path, data: { tooltip: '来源设置' }, remote: true, target: '_blank' do %>
          <i class="fas fa-cog"></i>
        <% end %>
      </div>
      <% end %>
      <%= f.collection_select :member_id, @members, :id, :name, on: { wrap_input_id: true } %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
