<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th>
        <p><%= Maintain.human_attribute_name('client.real_name') %></p>
        <p class="ui grey text"><%= Maintain.human_attribute_name('client.nick_name') %></p>
      </th>
      <th>
        <p><%= Profile.human_attribute_name(:age) %></p>
        <p><%= Profile.human_attribute_name(:gender) %></p>
      </th>
      <th>
        <p><%= Maintain.human_attribute_name('tutelar.real_name') %></p>
        <p class="ui green text"><%= Maintain.human_attribute_name('tutelar.identity') %></p>
      </th>
      <th><%= Tutelage.human_attribute_name(:relation) %></th>
      <th>
        <div>
          <%= Maintain.human_attribute_name(:maintain_source_id) %>
          <%= link_to admin_maintain_sources_path, data: { tooltip: '来源设置' }, target: '_blank' do %>
            <i class="fas fa-cog"></i>
          <% end %>
        </div>
        <div>
          <%= Maintain.human_attribute_name(:pipeline_id) %>
          <%= link_to admin_pipelines_path, data: { tooltip: '流水线' }, target: '_blank' do %>
            <i class="fas fa-cog"></i>
          <% end %>
        </div>
      </th>
      <th><%= Profile.human_attribute_name(:note) %></th>
      <th>
        <%= MaintainLog.human_attribute_name(:maintain_tag_id) %>
        <%= link_to admin_maintain_tags_path, data: { tooltip: '标签设置' }, target: '_blank' do %>
          <i class="fas fa-cog"></i>
        <% end %>
      </th>
      <th>
        <p class="ui grey text"><%= Maintain.human_attribute_name(:member_id) %></p>
        <p><%= Maintain.human_attribute_name(:state) %></p>
      </th>
      <th>
        <%= link_to detect_admin_maintains_path, class: 'ui teal button', remote: true do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @maintains.each do |maintain| %>
    <%= render layout: 'maintain', locals: { maintain: maintain } do %>
      <td>
        <p class="ui grey text"><%= maintain.member&.name %></p>
        <p><%= maintain.state_i18n %></p>
      </td>
      <td>
        <%= link_to admin_maintain_maintain_logs_path(maintain), data: { tooltip: t('crm.admin.maintain_logs.index.title') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-clock"></i>
        <% end %>
        <%= link_to detach_admin_maintain_path(maintain), method: :patch, data: { tooltip: t('crm.admin.maintains.index.detach'), confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-hand-holding"></i>
        <% end %>
        <%= link_to orders_admin_maintain_path(maintain), data: { tooltip: t('.show') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-shopping-cart"></i>
        <% end %>
        <%= link_to edit_admin_maintain_path(maintain), data: { tooltip: t('.edit') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_maintain_path(maintain), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= paginate @maintains %>
