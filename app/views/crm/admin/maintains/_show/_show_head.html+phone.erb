<th class="has-text-left">
<% if @maintain.client_type == 'Profiled::Profile' %>
  <%= link_to({ action: 'index' }, class: 'button is-borderless') do %>
    <i class="fa-light fa-angle-left fa-lg"></i>
  <% end %>
<% elsif @maintain.client_type == 'Wechat::External' %>
  <%= link_to({ controller: 'wechat/me/follows' }, class: 'button is-borderless') do %>
    <i class="fa-light fa-angle-left fa-lg"></i>
  <% end %>
<% end %>
</th>
<th class="has-text-right">
  <%= button_to({ action: 'actions' }, class: 'button is-borderless') do %>
    <i class="fa-light fa-ellipsis-h fa-lg"></i>
  <% end %>
</th>
