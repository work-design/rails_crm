<div class="ui top attached segment">
  <%= form_with theme: 'search', model: Maintain.new do |f| %>
    <div class="fields">
      <%= f.text_field 'client.real_name' %>
      <%= f.text_field 'tutelar.identity' %>
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: ['client.real_name', 'tutelar.identity']), class: 'ui button' %>
    </div>
  <% end %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th data-controller="check" data-check-name="xx">
        <%= check_box_tag 'xxd', nil, false, data: { action: 'check#toggleAll' } %>
      </th>
      <th>
        <p><%= Maintain.human_attribute_name('client.real_name') %></p>
        <p class="ui grey text"><%= Maintain.human_attribute_name('client.nick_name') %></p>
      </th>
      <th>
        <p><%= Maintain.human_attribute_name('client.age') %></p>
        <p><%= Maintain.human_attribute_name('client.gender') %></p>
      </th>
      <th>
        <p><%= Maintain.human_attribute_name('tutelar.real_name') %></p>
        <p class="ui green text"><%= Maintain.human_attribute_name('tutelar.identity') %></p>
      </th>
      <th><%= Agency.human_attribute_name(:relation) %></th>
      <th>
        <%= Maintain.human_attribute_name(:maintain_source_id) %>
        <%= link_to admin_maintain_sources_path, data: { tooltip: '来源设置' }, target: '_blank' do %>
          <i class="fas fa-cog"></i>
        <% end %>
      </th>
      <th><%= Maintain.human_attribute_name(:note) %></th>
      <th>
        <%= MaintainLog.human_attribute_name(:maintain_tag_id) %>
        <%= link_to admin_maintain_tags_path, data: { tooltip: '标签设置' }, target: '_blank' do %>
          <i class="fas fa-cog"></i>
        <% end %>
      </th>
      <th><%= Maintain.human_attribute_name(:state) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @maintains.each do |maintain| %>
    <%= render layout: 'maintain', locals: { maintain: maintain } do %>
      <td>
        <p><%= maintain.state_i18n %></p>
      </td>
      <td>
        <%= link_to assume_admin_maintain_path(maintain), data: { tooltip: t('.assume') }, method: :patch, class: 'ui mini circular icon button' do %>
          <i class="fas fa-vote-yea"></i>
        <% end %>
        <%= link_to assign_admin_maintain_path(maintain), data: { tooltip: t('.assign') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-hand-holding-usd"></i>
        <% end %>
        <%= link_to admin_maintain_maintain_logs_path(maintain), data: { tooltip: t('.log') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-clock"></i>
        <% end %>
        <%= link_to admin_maintain_path(maintain), data: { tooltip: t('.show') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_maintain_path(maintain), data: { tooltip: t('.edit') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_maintain_path(maintain), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= paginate @maintains %>
