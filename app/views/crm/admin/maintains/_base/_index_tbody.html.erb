<td>
  <p><%= model.client.identity %></p>
  <p>
    <span><%= model.client.real_name %></span>
    <span class="has-text-grey">（<%= model.client.nick_name %>）</span>
    <% if model.client.gender %>
      <span class="tag">
        <i class="fa-solid <%= model.client.male? ? 'fa-male has-text-info' : 'fa-female has-text-danger' %>"></i>
        <span class="pl-1"><%= model.client.gender_i18n %></span>
      </span>
    <% end %>
    <% if model.client.birthday %>
      <span class="tag"><%= model.client.age_str %></span>
    <% end %>
  </p>
  <p><%= model.remark %></p>
</td>
<td><%= model.state_i18n %></td>
<td>
  <p><%= model.client_member_id %></p>
</td>
<td>
  <p><%= model.maintain_source&.name %></p>
  <p>
    <span><%# model.task_template&.name %></span>
    <% if model.member %>
      <span>(<%= model.member.name %>)</span>
    <% end %>
  </p>
</td>
<td>
  <% model.tags.each do |tag| %>
    <span class="tag"><%= tag %></span>
  <% end %>
</td>
<td>
  <p class="has-text-grey"><%= model.member&.name %></p>
  <p class="has-text-grey"><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></p>
</td>
<td>
  <%= link_to({ controller: 'wallets', maintain_id: model.id }, aria: { label: t('crm.admin.wallets.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-solid fa-wallet"></i>
    <span class="pl-1"><%= model.wallets_count %></span>
  <% end %>
</td>
