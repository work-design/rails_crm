<%= form_with theme: 'search', model: Agency.new do |f| %>
  <div class="field-body">
    <%= f.text_field 'pupil.real_name' %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: ['pupil.real_name']), class: 'button is-light' %>
    </div>
  </div>
<% end %>
