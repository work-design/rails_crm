<h2 class="title text-centered">
  <i class="fa-solid fa-sm fa-building text-primary"></i>
  <span><%= @client.name %></span>
</h2>

<div class="tabs is-centered">
  <ul>
    <li class="<%= active_helper('clients': ['show', 'edit'], active: 'is-active') %>">
      <%= link_to t('.clients.show.title'), { controller: 'clients', action: 'show', id: @client.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'crm/admin/client/maintains', active: 'is-active') %>">
      <%= link_to t('crm.admin.client.maintains.index.title'), { controller: 'crm/admin/client/maintains', client_id: @client.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'crm/admin/client/contacts', active: 'is-active') %>">
      <%= link_to t('.contacts.index.title'), { controller: 'client/contacts', client_id: @client.id } %>
    </li>
    <li class="<%= active_helper(controllers: ['crm/admin/client/clients'], active: 'is-active') %>">
      <%= link_to t('crm.admin.client.clients.index.title'), { controller: 'client/clients', client_id: @client.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'notes', active: 'is-active') %>">
      <%= link_to t('.notes.index.title'), { controller: 'client/notes', client_id: @client.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'orders', active: 'is-active') %>">
      <%= link_to({ controller: 'orders', client_id: @client.id }) do %>
        <i class="fa-solid fa-shopping-cart text-primary"></i>
        <span class="ml-1"><%= t('.orders.index.title') %></span>
      <% end %>
    </li>
    <li class="<%= active_helper(controllers: 'wallets', active: 'is-active') %>">
      <%= link_to({ controller: 'wallets', client_id: @client.id }) do %>
        <i class="fa-solid fa-wallet"></i>
        <span class="ml-1"><%= t('.wallets.index.title') %></span>
      <% end %>
    </li>
    <li class="<%= active_helper(controllers: 'cards', active: 'is-active') %>">
      <%= link_to({ controller: 'cards', client_id: @client.id }) do %>
        <i class="fa-solid fa-credit-card"></i>
        <span class="ml-1"><%= t('.cards.index.title') %></span>
      <% end %>
    </li>
    <li class="<%= active_helper(controllers: 'addresses', active: 'is-active') %>">
      <%= link_to({ controller: 'addresses', client_id: @client.id }) do %>
        <i class="fa-solid fa-location-dot"></i>
        <span class="ml-1"><%= t('.addresses.index.title') %></span>
      <% end %>
    </li>
    <li class="<%= active_helper(controllers: 'productions', active: 'is-active') %>">
      <%= link_to({ controller: 'productions', client_id: @client.id }) do %>
        <i class="fa-solid fa-store"></i>
        <span class="ml-1"><%= t('.productions.index.title') %></span>
      <% end %>
    </li>
  </ul>
</div>
