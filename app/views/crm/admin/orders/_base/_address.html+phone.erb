<%= link_to({ controller: 'crm/admin/addresses', action: 'order', address_id: @order.address_id }, class: 'button mx-3') do %>
  <i class="fa-solid fa-fw fa-location-dot color-danger pr-2"></i>
  <div class="flex-grow-1">
  <% if @order.address %>
    <p>
      <span><%= @order.address.contact %></span>
      <span><%= @order.address.tel %></span>
    </p>
    <p class="size-7">
      <span><%= @order.address.area.full_name %></span>
      <span><%= @order.address.station&.name %></span>
      <span><%= @order.address.detail %></span>
    </p>
  <% else %>
    <span>收货人信息</span>
  <% end %>
  </div>
  <i class="fa-solid fa-fw fa-location-dot color-danger pr-2"></i>
<% end %>
