<%= link_to({ controller: 'crm/admin/addresses', action: 'order_from', from_address_id: @order.from_address_id }, class: 'button mx-3 mb-3') do %>
  <i class="fa-solid fa-fw fa-location-dot text-success pr-2"></i>
  <div class="flex-grow-1">
  <% if @order.from_address %>
    <p>
      <span><%= @order.from_address.contact %></span>
      <span><%= @order.from_address.tel %></span>
    </p>
    <p class="size-7">
      <span><%= @order.from_address.area.full_name %></span>
      <span><%= @order.from_address.station&.name %></span>
      <span><%= @order.from_address.detail %></span>
    </p>
  <% else %>
    <span>发货人信息</span>
  <% end %>
  </div>
  <i class="fa-solid fa-fw fa-location-dot text-success pr-2"></i>
<% end %>
