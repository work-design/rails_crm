<td><%= model.wallet_template.name %></td>
<td>
  <span><%= model.amount.to_fs(:rounded, precision: model.wallet_template.digit) %></span>
  <span><%= model.wallet_template.unit %></span>
</td>
<td>
  <%= link_to({ controller: 'wallet_advances', wallet_id: model.id }, aria: { label: t('crm.admin.wallet_advances.index.title') }) do %>
    <i class="fa-regular fa-gem"></i>
    <span class="pl-1"><%= model.income_amount.to_fs(:rounded, precision: model.wallet_template.digit) %></span>
    <span><%= model.wallet_template.unit %></span>
  <% end %>
</td>
<td>
  <%= link_to({ controller: 'wallet_payments', wallet_id: model.id }, aria: { label: t('crm.admin.wallet_payments.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-regular fa-credit-card"></i>
    <span class="pl-1"><%= model.expense_amount.to_fs(:rounded, precision: model.wallet_template.digit) %></span>
    <span><%= model.wallet_template.unit %></span>
  <% end %>
  <%= link_to({ controller: 'payouts', wallet_id: model.id }) do %>
    <i class="fa-regular fa-wallet"></i>
  <% end %>
</td>
<td>
  <p><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></p>
</td>
