<div data-controller="empty" class="box is-padding-less mx-3">
  <div class="box-header">
    <span class="size-7 has-border-left-primary"><%= t('crm.me.title') %></span>
  </div>
  <div class="columns is-4-mobile flex is-vcentered is-centered m-0 is-shadow" data-empty-target="content">
    <%= link_to({ controller: 'crm/me/contacts' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <i class="fa-solid fa-fw fa-xl fa-users"></i>
      </div>
      <div class="text-grey size-7 mt-1"><%= t('crm.me.contacts.index.title') %></div>
    <% end %>
    <%= link_to({ controller: 'crm/me/sources' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <i class="fa-solid fa-fw fa-xl fa-tags"></i>
      </div>
      <div class="text-grey size-7 mt-1"><%= t('crm.me.sources.index.title') %></div>
    <% end %>
    <%= link_to({ controller: 'crm/admin/home' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <i class="fa-solid fa-fw fa-xl fa-cogs"></i>
      </div>
      <div class="text-grey size-7 mt-1"><%= t('crm.admin.home.index.title') %></div>
    <% end %>
  </div>
</div>
